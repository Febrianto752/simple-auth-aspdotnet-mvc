@model AuthMVC.Models.LoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
          crossorigin="anonymous" />
</head>
<body>
    <h1>Login Page</h1>

    <form asp-controller="Access" asp-action="Login" method="post">
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email"
                   class="form-control"
                   id="email"
                   placeholder="Email..."
                   asp-for="Email" />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Email address</label>
            <input type="text"
                   class="form-control"
                   id="password"
                   placeholder="Password..."
                   asp-for="Password" />
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox"
                   class="form-check-input"
                   id="remember-me"
                   asp-for="KeepLoggedIn" />
            <label class="form-check-label" for="remember-me">Keep me logged In</label>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    @if (ViewData["ValidateMessage"] != null)
    {
        <br />
        <label class="text-danger">@ViewData["ValidateMessage"]</label>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>
</body>
</html>
